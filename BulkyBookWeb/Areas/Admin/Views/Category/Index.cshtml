@model BulkyBook.Models.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Index";
}


<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category">  Create new Category </a>
        </div>
    </div>

</div>

<div class="col-2">
    <label>&nbsp;</label>
    <button type="button" class="btn btn-primary form-control printButton" onclick="PrintReport">Print</button>
</div>

<div class="row p-3">
<table class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.categories)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@obj.ID">Edit</a>
                    <a>|</a>
                
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>
</div>

<script>
    $("#printButton").onclick(PrintReport() {
        window.open("@Url.Action("view", "season")", "_blank",           
            "menubar=no, toolbar=no, resizable=no, top=100, left=200, width=500, height=500");
    });
</script>