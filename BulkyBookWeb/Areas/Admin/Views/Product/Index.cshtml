@model BulkyBook.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Index";
}


<div class="container p-4">
    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Product</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product">  Create new Product </a>
        </div>
    </div>
</div>


<table id="myTable" class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            
            <th>
                Action
            </th>

        </tr>
    </thead>
   


</table>

@section scripts{
    <script src="~/js/Product.js"></script>
}